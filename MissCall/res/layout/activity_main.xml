<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
    android:background="@drawable/lamborgini" >

    <Button
        android:id="@+id/btnSelectContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select From Contacts"
      />

 <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />
  
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />
  
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Enter number to call" />
     
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
  <EditText
		    android:id="@+id/phone_number"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:hint="Number"
		    android:textColor="#FFFFFF"
		    
		    android:inputType="number" />
     
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Enter times to call" />
	 
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
  
  <EditText
		    android:id="@+id/times_to_call"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:hint="Number"
		    android:inputType="number" />
  	 
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Enter ofset" />
    
	 
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
      <EditText
		    android:id="@+id/wait_times"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:hint="Number"
		    android:inputType="number" />
    
 	 
      <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text= "" />   
  
     <Button
        android:id = "@+id/btnCall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="Start Calling"/>
    
</LinearLayout>
